	cairo (>= 1.8.10-1),
	expat1,
	fink (>= 0.29.7-1),
	fink-package-precedence,
	fontconfig2-dev (>= 2.4.1-1),
	freetype219 (>= 2.3.12-1),
	glitz,
	gettext-bin,
	gettext-tools,
	libgettext8-dev,
	libiconv-dev,
	libjpeg8,
	libpng14,
	libxml2,
	pixman (>= 0.16.0-1),
	poppler2 (>= %v-%r),
	pkgconfig (>= 0.23-1),
	x11-dev,
	xft2-dev
<<
