<<
SplitOff4: <<
	Package: %N-icon-themes
	Description: KDE4 - extra icon themes
	Depends: %N-base (>= %v-%r)
	Files: opt/kde4/%type_pkg[kde]/share/icons
<<
SplitOff5: <<
	Package: %N-sounds
	Description: KDE4 - extra sounds
	Depends: %N-base (>= %v-%r)
