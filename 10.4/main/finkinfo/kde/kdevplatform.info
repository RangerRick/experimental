UseMaxBuildJobs: true
CompileScript: <<
	#!/bin/sh -ev
	
	export KDE4_PREFIX="%p" KDE4_TYPE="%type_pkg[kde]"
	. %p/sbin/kde4-buildenv.sh
	
	mkdir -p build
	pushd build
	cmake $KDE4_CMAKE_ARGS -DBOOST_ROOT=%p ..
	make VERBOSE=1
	popd
<<

InstallScript: <<
#!/bin/sh -ev

	pushd build
		make -j1 install/fast DESTDIR="%d"
	popd
<<
