	arts-dev (>= 1.5.10-10),
	cmake (>= 2.8.2-1),
	expat1,
	fink (>= 0.29.7-1),
	freetype219 (>= 2.4.4-2),
	kdelibs3-unified-dev (>= 3.5.10-10),
	libart2 (>= 2.3.20-1),
	libiconv-dev,
	libidn,
	libpng15 (>= 1.5.2-1),
	pcre,
	pkgconfig (>= 0.23-1),
	qt3 (>= 3.3.8-2000),
	x11-dev
