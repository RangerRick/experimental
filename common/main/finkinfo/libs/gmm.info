CompileScript: <<
#!/bin/sh -ev
	if [[ $(sw_vers -productVersion) > 10.6 ]]; then
		export CC=clang CXX=clang++ CPP="clang++ -E"
	elif [ -x /usr/bin/gcc-4.2 ]; then
		export CC=gcc-4.2 CXX=g++-4.2 CPP=cpp-4.2
	else
		export CC=gcc-4.0 CXX=g++-4.0 CPP=cpp-4.0
	fi
	./configure %c
	make
<<
