	<daemon name="artsd">
		<executable background="yes">%p/bin/artsd</executable>
		<!-- the daemon will background itself, but may take a while
		     to start up to the point where it does so -->
		<pidfile>%p/var/run/arts.pid</pidfile>
	</daemon>

</service>
<<
