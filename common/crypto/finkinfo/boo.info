CompileScript: <<
#!/bin/sh -ex

	if [ -d "%p/lib/mono/gac/Boo.Lang" ]; then
		if [ $UID -ne 0 ]; then echo "this package cannot be built with --build-as-nobody"; exit 1; fi
		echo "=== WARNING ==="
		echo "To build Boo, I have to temporarily remove your existing boo from the GAC.  I'll put it back when we're done."
		echo ""
		mkdir -p %p/lib/mono/gac/Boo.Temp
		/bin/mv "%p/lib/mono/gac/"Boo.Lang* "%p/lib/mono/gac/Boo.Temp/"
	fi

	export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH"
	export MONO_GAC_PREFIX=`pwd`/gac
	for file in bin/Boo.Lang*.dll; do
		gacutil -i "$file" -gacdir $MONO_GAC_PREFIX
	done
	nant -D:install.prefix=%p -D:skip.vs=True

	if [ -d "%p/lib/mono/gac/Boo.Temp" ]; then
		/bin/mv "%p/lib/mono/gac"/Boo.Temp/* "%p/lib/mono/gac/"
		rmdir "%p/lib/mono/gac/Boo.Temp"
	fi
<<
InstallScript: <<
#!/bin/sh -ex

	export PKG_CONFIG_PATH="%p/lib/pango-ft219/lib/pkgconfig:$PKG_CONFIG_PATH"
	nant -D:install.prefix="%p" -D:install.destdir="%d" install

	perl -pi -e 's,^libdir=.*$,libdir=%p/lib/mono,' %i/lib/pkgconfig/boo.pc
	install -d -m 755 %i/share/doc/%N
	mv examples %i/share/doc/%N/
<<

