	bzip2-shlibs,
	libgettext8-shlibs,
	libiconv,
	libusb-shlibs,
	openldap24-shlibs,
	readline5-shlibs,
	libgpg-error-shlibs,
	libgcrypt-shlibs (>= 1.2.0-1),
	libksba8-shlibs (>= 1.0.2-1),
	pth2-shlibs,
	libcurl4-shlibs
