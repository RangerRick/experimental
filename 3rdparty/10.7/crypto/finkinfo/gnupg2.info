BuildDepends: <<
	texinfo (>= 4.1-3),
	libgettext8-dev,
	libiconv-dev,
	bzip2-dev,
	libusb,
	openldap24-dev,
	readline5,
	libgpg-error (>= 1.4-1),
	libgcrypt (>= 1.2.0-1),
	libassuan2,
	libksba8 (>= 1.0.2-1),
	pth2-dev,
	libcurl4,
	libssh2.1,
	system-openssl-dev,
	fink (>= 0.30.0-1)
<<
